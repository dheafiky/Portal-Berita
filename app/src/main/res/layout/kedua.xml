<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="300dp"
            android:layout_height="192dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bangtan" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="24dp"
            android:text="Jadi Ambassador UNICEF, BTS Beri Pidato Di PBB"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="379dp"
            android:layout_height="320dp"
            android:layout_marginTop="10dp"
            android:text='Kepopuleran Bangtan Boys sekarang berada di puncaknya. Bukan hanya lagu dan tiket konser yang laris manis, BTS juga menjadi langganan untuk tampil di acara-acara televisi Amerika. Hal ini membuat PBB menunjuk BTS sebagai duta UNICEF untuk proyek kampanye "Love Yourself". Kampanye ini diumumkan pada Oktober 2017 lalu dan telah mengumpulkan lebih dari 1 juta dolar (sekitar RP 14,8 miliar) pada Juni 2018.'
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="0dp" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
